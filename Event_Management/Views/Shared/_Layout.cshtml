<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Tiwari's Event Management", "Index", "Account", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Home", "Decoration")</li>
                    <li>@Html.ActionLink("About", "About", "Decoration")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Decoration")</li>
                    <li>@Html.ActionLink("Book_Event", "Create", "Book_Event")</li>
                    <li>@Html.ActionLink("Decoration", "Index", "Decoration")</li>
                    <li>@Html.ActionLink("Food", "Index", "Food")</li>
                    <li>@Html.ActionLink("ADD_ON_ITEM", "Index", "ADD_ON_ITEM")</li>
                    <li>@Html.ActionLink("Login", "Login", "Account")</li>
                    <li>@Html.ActionLink("SignUP", "SignUP", "Account")</li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>Dear -@User.Identity.Name</li>
                        <li>@Html.ActionLink("LogOut", "LogOut", "Account")</li>
                    }
                    else
                    {
                        <li>Login</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
